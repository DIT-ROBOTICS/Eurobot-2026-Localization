<!-- Reusable launch file for obstacle detection -->
<launch>

  <node name="obstacle_extractor_to_robot" pkg="obstacle_detector" exec="obstacle_extractor_node">
    <!-- <remap from="/scan" to="/merged_scan" /> -->
    <!-- <remap from="/pcl" to="/scan_filtered" /> -->
    <param name="active"               value="true"/>
    <param name="use_scan"             value="true"/>
    <param name="use_pcl"              value="false"/>
    <param name="use_sim_time"         value="false"/>

    <param name="use_split_and_merge"    value="false"/> <!-- choose wether to use Iterative End Point Fit (false) or Split And Merge (true) algorithm to detect segments -->
    <param name="circles_from_visibles"  value="false"/>
    <param name="discard_converted_segments" value="true"/>
    <param name="transform_coordinates"  value="true"/>

    <param name="min_group_points"     value="5"/>

    <param name="max_group_distance"   value="0.1"/>
    <param name="distance_proportion"  value="0.00628"/> <!-- 2*pi*0.001 this is related to our lidar frequency, right? -->
    <param name="max_split_distance"   value="0.2"/>
    <param name="max_merge_separation" value="0.05"/>
    <param name="max_merge_spread"     value="0.2"/>
    <param name="max_circle_radius"    value="0.25"/>
    <param name="radius_enlargement"   value="0.0"/> <!-- we do not need enlargement! -->

    <param name="tail_threshold"       value="0.0"/> <!-- vector angle 75 degree -->

    <param name="frame_id"             value="base_footprint"/>
    <param name="pose_array"           value="false"/>
  </node>

</launch>
